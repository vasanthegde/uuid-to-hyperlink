{
  "manifest_version": 3,
  "name": "UUID Link Converter",
  "version": "1.0",
  "description": "Converts UUIDs to clickable hyperlinks with staging/prod URL handling",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "UUID Link Converter Settings"
  },
  "icons": {
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
